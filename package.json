{
  "name": "sonarcloud-demo-js",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "deps:check": "npm outdated",
    "deps:upgrade": "npx -y npm-check-updates@latest -u && npm install",
    "lint": "eslint \"src/**/*.js\" \"test/**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "sonar:scan": "npx -y sonar-scanner -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-plugin-jest": "^29.5.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["lcov", "text"],
    "testMatch": ["**/test/**/*.test.js"]
  }
}

